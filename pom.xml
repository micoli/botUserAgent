	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.8</java.version>
	</properties>

	<modules>
		<module>botRunner-api</module>
		<module>botRunner</module>
		<module>plugin-webCommands</module>
		<module>plugin-networkCommands</module>
		<module>plugin-consoleCommands</module>
		<module>plugin-soundTTS</module>
		<module>plugin-jsLib</module>
